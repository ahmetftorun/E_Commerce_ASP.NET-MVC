@model IEnumerable<AhmetProj.Models.Sliders>

@{
    ViewBag.Title = "slider_listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-sm-6">
                <h3>Urun Listele</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index","Admin")"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">AnaSayfa</li>
                    <li class="breadcrumb-item active">Slider Listesi</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid list-products">
    <div class="row">

        <div class="col-sm-12">
            <div class="card">

                <div class="card-body">
                    <div class="table-responsive theme-scrollbar product-table">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>Slider Resim</th>
                                    <th>Slider Başlık</th>
                                    <th>Slider Açıklama</th>
                                    <th>Slider Fiyat</th>
                                    
                                    <th>Ayarla</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td><img src="~/urun_resimleri/@item.slider_img" alt=""></td>
                                        <td>@item.slider_title
                                       </td>
                                        <td> <span>@item.slider_description</span></td>
                                        <td class="font-success">@item.slider_price</td>
                                  
                                        <td>

                                            <a href="@Url.Action("slider_sil", "Admin", new {id=item.slider_id})" class="btn btn-danger btn-xs" role="button" data-original-title="Sil" title="Sil">Sil</a>
                                            <a href="@Url.Action("slider_guncelle", "Admin", new { id = item.slider_id })" class="btn btn-primary btn-xs" role="button" data-original-title="Güncelle" title="Güncelle">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>