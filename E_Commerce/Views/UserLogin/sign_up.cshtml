@model AhmetProj.Models.Users

@{
    ViewBag.Title = "sign_up";
    Layout = "~/Views/Shared/_GLayout.cshtml";
}

<div class="signin-header">
    <div class="row align-items-center">
        <div class="col-sm-4">
            <a href="@Url.Action("Index","Home")" class="site-logo"><img src="~/assets/images/logo/logo.png" alt="logo"></a>
        </div>
        <div class="col-sm-8">
            <div class="singin-header-btn">
                <p>Bir Hesabınız Var mı?</p>
                <a href="@Url.Action("sign_in","UserLogin")" class="axil-btn btn-bg-secondary sign-up-btn">Giriş Yap</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-4 col-lg-6">
        <div class="axil-signin-banner bg_image bg_image--10">
            <h3 class="title">En İyi Urunlere Sahibiz</h3>
        </div>
    </div>
    <div class="col-lg-6 offset-xl-2">
        <div class="axil-signin-form-wrap">
            <div class="axil-signin-form">
                <h3 class="title">Burada yeniyim</h3>
                <p class="b2 mb--55">Hesap bilgilerinizi giriniz</p>
                @using (Html.BeginForm("sign_up", "UserLogin"))
                {
                    @Html.AntiForgeryToken()
                    <form class="singin-form">
                        <div class="form-group">
                            <label>Kullanıcı Adı*</label>
                            @Html.EditorFor(model => model.user_username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Şifre*</label>
                            @Html.EditorFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Ad*</label>
                            @Html.EditorFor(model => model.user_name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Soyad*</label>
                            @Html.EditorFor(model => model.user_surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Telefon Numarası</label>
                            @Html.EditorFor(model => model.user_phonenumber, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Email*</label>
                            @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control" } })
                           
                        </div>
                        <div class="form-group">
                            <button type="submit" class="axil-btn btn-bg-primary submit-btn">Hesap Olustur</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
