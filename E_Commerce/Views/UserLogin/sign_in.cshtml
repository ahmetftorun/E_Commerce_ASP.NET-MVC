@model AhmetProj.Models.Users
@{
    ViewBag.Title = "sign_in";
    Layout = "~/Views/Shared/_GLayout.cshtml";
}
<div class="signin-header">
    <div class="row align-items-center">
        <div class="col-sm-4">
            <a href="@Url.Action("Index","Home")" class="site-logo"><img src="~/assets/images/logo/logo.png" alt="logo"></a>
        </div>
        <div class="col-sm-8">
            <div class="singin-header-btn">
                <p>Üye Değilmisiniz?</p>
                <a href="@Url.Action("sign_up","UserLogin")" class="axil-btn btn-bg-secondary sign-up-btn">Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xl-4 col-lg-6">
        <div class="axil-signin-banner bg_image bg_image--9">
            <h3 class="title">En İyi Urunlere Sahibiz</h3>
        </div>
    </div>
    <div class="col-lg-6 offset-xl-2">
        <div class="axil-signin-form-wrap">
            <div class="axil-signin-form">
                <h3 class="title">Giriş Yapın </h3>
                @using (Html.BeginForm("sign_in","UserLogin",FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form class="singin-form">
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.user_email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Şifre</label>
                            @Html.PasswordFor(model => model.user_password, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between">
                            <button type="submit" class="axil-btn btn-bg-primary submit-btn">Giriş Yap</button>
                          
                            <a href="@Url.Action("repassword","UserLogin")" class="forgot-btn">Şifrenizimi Unuttunuz</a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>



